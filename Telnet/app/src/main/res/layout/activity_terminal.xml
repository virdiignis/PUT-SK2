<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TerminalActivity">

    <EditText
        android:id="@+id/terminalText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#D2000000"
        android:ems="10"
        android:gravity="start|top"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|textNoSuggestions"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commandText" />

    <EditText
        android:id="@+id/commandText"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:background="#D2000000"
        android:ems="10"
        android:hint="Command..."
        android:inputType="textVisiblePassword"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textColorHint="#81FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendCommandButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#79000000"
        android:backgroundTintMode="add"
        android:text="Send"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/terminalText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/commandText"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>